<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="mafischer">
        <createTable tableName="User">
            <column name="uid" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="unsername" type="varchar(50)"/>
            <column name="lastname" type="varchar(50)"/>
            <column name="firstname" type="varchar(50)"/>
            <column name="personalNr" type="varchar(50)"/>
            <column name="function" type="varchar(50)"/>
            <column name="phone" type="varchar(50)"/>
            <column name="handy" type="varchar(50)"/>
            <column name="fax" type="varchar(50)"/>
            <column name="department" type="varchar(50)"/>
            <column name="email" type="varchar(50)"/>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="mafischer">
        <createTable tableName="Group">
            <column name="gid" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="groupname" type="varchar(50)"/>
            <column name="right" type="varchar(50)"/>
        </createTable>
    </changeSet>
    
    <changeSet id="3" author="mafischer">
        <createTable tableName="GroupUser">
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_user_group" references="User(uid)"/>
            </column>
            <column name="group_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_group_user" references="Group(gid)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>