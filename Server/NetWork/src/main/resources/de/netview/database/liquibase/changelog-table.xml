<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="mafischer">
        <createTable tableName="User">
            <column name="uid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(50)"  >
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(50)"/>
            <column name="firstname" type="varchar(50)"/>
            <column name="personalnr" type="varchar(50)"/>
            <column name="function" type="varchar(50)"/>
            <column name="phone" type="varchar(50)"/>
            <column name="handy" type="varchar(50)"/>
            <column name="fax" type="varchar(50)"/>
            <column name="department" type="varchar(50)"/>
            <column name="email" type="varchar(50)"/>
            <column name="lastlogin" type="BIGINT" />
            <column name="state" type="INT" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="false"/>

        </createTable>
    </changeSet>

    <changeSet id="2" author="mafischer">
        <createTable tableName="Profile">
            <column name="pid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="mafischer">
        <createTable tableName="Location">
            <column name="lid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="street" type="varchar(50)" />
            <column name="plz" type="varchar(50)"/>
            <column name="city" type="varchar(50)"/>
            <column name="description" type="varchar(50)"/>
            <column name="removed" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="mafischer">
        <createTable tableName="Network">
            <column name="nid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="subnetz" type="varchar(50)" />
            <column name="mask" type="varchar(50)"/>
            <column name="route" type="varchar(50)"/>
            <column name="description" type="varchar(50)"/>
            <column name="removed" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="mafischer">
        <createTable tableName="Hardware">
            <column name="hid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="connectionid" type="varchar(50)" />
            <column name="lastlogin" type="varchar(50)"/>
            <column name="lastlogout" type="varchar(50)"/>
            <column name="group" type="varchar(50)"/>
            <column name="inventurnr" type="varchar(50)"/>
            <column name="leasingende" type="varchar(50)"/>
            <column name="type" type="varchar(50)"/>
            <column name="function" type="varchar(50)"/>
            <column name="seriennr" type="varchar(50)"/>
            <column name="costcenter" type="varchar(50)"/>
            <column name="description" type="varchar(50)"/>
            <column name="removed" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>


    <changeSet id="6" author="mafischer">
        <createTable tableName="Protokoll">
            <column name="pid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="BIGINT" />
            <column name="description" type="varchar(50)"/>
            <column name="removed" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

</databaseChangeLog>